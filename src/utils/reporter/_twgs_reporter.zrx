 msg="<< script error:  "||arg(1)||" >>"
 mail="<< if this is a serious problem, email me at: the.reverend@coastgames.com >> "
 call zocwriteln
 call zocwriteln "^[[1;31m"||msg||"^[[0m"
 if arg(1)\="timeout" then call zocwriteln "^[[1;33m"||mail||"^[[0m"
 call _beep "error.wav"
 exit
return


