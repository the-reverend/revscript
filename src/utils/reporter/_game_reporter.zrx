call zocrespond "[Pause]", "^M"
if timestamp then call zocsend date||"^My"
else call zocsend date||"^Mn"
if zocwait("Computer command")=640 then call _error "timeout"
if zocwait("(?=Help)?")=640 then call _error "timeout"
call zocrespond "[Pause]"

/* EXIT COMPUTER MODE */
call zocsend "q"
if zocwait("<Computer deactivated>")=640 then call _error "timeout"
if zocwait("(?=Help)?")=640 then call _error "timeout"

/* WRITE TDL AND TDR SCREENS */
if tdlscreen | tdrscreen then do
 call zocsend "t"
 if zocwait("Corporate command")=640 then call _error "timeout"
 if tdlscreen then do
  call zocsend "dl"
  if zocwait("TW2002 Corporate Listings")=640 then call _error "timeout"
  if zocwait("Corporate command")=640 then call _error "timeout"
 end /*if*/
 if tdrscreen then do
  call zocsend "dr"
  if zocwait("TW2002 Corporate Listings")=640 then call _error "timeout"
  if zocwait("Corporate command")=640 then call _error "timeout"
 end /*if*/
 call zocsend "q"
 if zocwait("Command [")=640 then call _error "timeout"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*if*/

/* STOP LOGGING TO INFILE */
call zoclogging 0, 1
call zoclogname ldefault
call zoclogging 1, 1
call zocsetoption('VTStripSeq='||emulation)

/* CONVERT LOG ANSI TO HTML */
outfile=prefix||"_"||translate(date,"_","/")||".html"
call _ansi_to_html lpath||infile, htmlpath||outfile, "REV-SCRIPT - "||htmltitle

/* FTP TO WEBSERVER */
if wmode<3 then do
 call zocwrite "ftp in progress ... "
 if _ftp(address, username, password, ,
         remotewd, mode, htmlpath, outfile, wmode) then call zocwriteln "SUCCESS!"
 else call zocwriteln "FAILED!"
end /*if*/

/* WAIT FOR NEXT INTERVAL */
now=_getservertime("minutes")+1
stop=(now%interval)*interval+interval
if (stop-now)<2 then stop=stop+interval

done=0
do while \done
 if now>=stop | (stop-now)>=1440 then done=1
 else do
  delay=min(30,trunc(((stop-now)//1440)*60))
   hh=trunc(((stop-now)//1440)/60)
   if hh<10 then hh="0"||hh
   mm=trunc(((stop-now)//1440)-hh*60)
   if mm<10 then mm="0"||mm
   ss=trunc((((stop-now)//1440)//1)*60)
   if ss<10 then ss="0"||ss
   call zocwrite _ansi("bt;fwh")||"< refresh in "||hh||":"||mm||":"||ss||" > "
  call zocdelay delay
  now=_getservertime("minutes")+1
 end /*else*/
end /*do*/

signal startover

exit

