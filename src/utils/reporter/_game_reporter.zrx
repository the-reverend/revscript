globals=_setglobals()
call _timeout 60
call zocsynctime 500
call on halt name _halt
call zockeyboard "LOCK"

parse value arg(1) with arg.1 arg.2 arg.3 arg.4 .
do i=1 to 4
 arg.i=translate(arg.i," ","?")
end

if \arg(1,"E") then do
 if \_pcheck("Command [") then call _error "please start at the command prompt."
end /*if*/

