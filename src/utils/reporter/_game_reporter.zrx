parse value _get_log_info() with lpath ";" ldefault
parse value zocgetoption("VTStripSeq") with . '="' emulation '"'
spath=_get_script_path()

/* CHECK FOR OBSERVER MODE */
observer=0
call zocsend "r"
ans=zocwaitmux("This command not available to an Observer.",,
               "Marker Beacon here? (Y/N)",,
               "You do not have any Marker Beacons.",,
               "The Federation does not allow beacons")
select
 when ans=0 then observer=1
 when ans=1 then call zocsend "n"
 when ans=2 then nop
 when ans=3 then nop
 otherwise nop
end /*select*/

/* REPORTING OPTIONS */
menu="timestamp (CD screen);player list (CLV screen);game status (V screen)"
if \observer then menu=menu||";who's online (# screen);corp list (TDL screen);corp rank (TDR screen)"
if \arg(1,"E") then optlist=_mrequestlist("pick one or more option:",menu,";","c")
else optlist=arg.1
if optlist="##CANCEL##" then call _quit "script cancelled by user."

timestamp=_dword(optlist,1,";")
clvscreen=_dword(optlist,2,";")
vscreen=_dword(optlist,3,";")
if observer then do
 woscreen=0
 tdlscreen=0
 tdrscreen=0
end /*if*/
else do
 woscreen=_dword(optlist,4,";")
 tdlscreen=_dword(optlist,5,";")
 tdrscreen=_dword(optlist,6,";")
end /*else*/

/* LOAD USER SETTINGS */
if \arg(1,"E") then iname=zocgetfilename("choose config file:",spath||"*.ini")
               else iname=arg.2
if iname="##CANCEL##" then exit
call _newline _ansi("bt;fgr")
if \arg(1,"E") then parse value _getgameinfo(iname) with spath ";" iname ";" game
               else game=arg.3
