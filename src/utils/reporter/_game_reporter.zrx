hdr1="REV-SCRIPT - _game_reporter.zrx r.5 - "

_g.1=loginmacro
_g.2=gamepwd
_g.3=iname
_g.4=game
_g.5=lname
_g.6=optlist
_g.7=wmode

/* DISABLE MESSAGES */
call _twmsg "off"

startover:

/* ENTER COMPUTER MODE */
if \vscreen then do
 call zocsend "c"
 if zocwait("Computer command [")=640 then call _error "timeout"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*do*/
call _newline

/* START LOGGING TO INFILE */
call zoclogging 0, 1
if _fileexists(lpath||infile) then call dosdel lpath||infile
call zocsetoption('VTStripSeq=no')
call zoclogname infile
call zoclogging 1, 1

/* WRITE HEADER TO LOG */
call zocwriteln _ansi("bt;frd")||hdr1||date("N")||", "||time("N")||", refresh every "||interval||" minutes."||_ansi("bt;fwh")

/* WRITE V SCREEN TO LOG */
if vscreen then do
 call zocsend "v"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*if*/

/* WRITE # SCREEN TO LOG */
if woscreen then do
 call zocsend "#"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*if*/

/* ENTER COMPUTER MODE */
if vscreen then do
 call zocsend "c"
 if zocwait("Computer command [")=640 then call _error "timeout"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*do*/

/* WRITE CLV SCREEN TO LOG */
if clvscreen then do
 call zocsend "lv"
 if zocwait("Computer command")=640 then call _error "timeout"
 if zocwait("(?=Help)?")=640 then call _error "timeout"
end /*if*/

/* WRITE CD SCREEN TO LOG */
