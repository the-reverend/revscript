       end /*do*/
       if \found then c=c-1
      end /*if*/
      i=j+1
      j=pos(d2c(13),buff,i)
     end /*do*/

     /* sort ship list by ship number */
     do i=1 to c
      do j=i+1 to c
       if shipnum.i>shipnum.j then do
