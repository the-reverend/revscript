      if pos("T",shields.c)>0 then shields.c=strip(translate(shields.c," ", "T"))*1000
      if shiplist\="" then do
       found=0
       do k=1 to _dwords(shiplist,";")
        if pos(lower(_dword(shiplist,k,";")),lower(shiptype.c))>0 then found=1
