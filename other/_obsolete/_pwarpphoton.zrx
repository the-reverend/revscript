_kill:
 ksector=_stripint(arg(1))
 kplayer=arg(2)
 kmoved=0
 if kplayer=_dword(lasttarget,1,";") then lasttarget=kplayer||";"||_dword(lasttarget,2,";")+1
 else lasttarget=kplayer||";0"
 if _dword(lasttarget,2,";")>maxsleep then lasttarget=kplayer||";0"
 if ksector\="" & _dword(lasttarget,2,";")=0 then do
  call _mapseek mapname, reclen, ksector
  if (targetlist.1="" | _listinstr(targetlist.1, kplayer)) & (kplayer="" | \_listinstr(targetlist.2, kplayer)) then do
   alist=_s.ksector
   do while alist\=""
    parse var alist asec ";" alist
    awarptype=asec%20000
    asec=asec//20000
    call _mapseek mapname, reclen, asec
    if _f.asec>0 & awarptype<2 then do
     if bdflag=1 then call _error
     call zocsend "p"||asec||"^Mycpy"||ksector||"^Mq@"
     kans=zocwaitmux("That is not an adjacent sector","Average Interval Lag:")
     select
      when kans=0 then call zocsend "q"
      when kans=1 then kmoved=1
      when kans=640 then call _error "timeout"
     end /*select*/
     if zocwait("Citadel command (?=help)")=640 then call _error "timeout"
     alist=""
    end /*if*/
   end /*do*/
  end /*if*/
  /* KILL COMPLETE - RETURN HOME */
  if kmoved then do
   call _beep "photon.wav"
   call _newline
   call zocwriteln _ansi("bt;frd")||"<< pwarp photon launched from "||asec||" to "||ksector||", "||ptc-1||" photons remain. >> "||_ansi("fmg")
   call zocwrite _ansi("bt;frd")||"<< warps adjacent to "||ksector||" - "
   do kk=1 to _dwords(_s.ksector,";")
    call zocwrite _dword(_s.ksector,kk,";")||" "
   end /*do*/
   call zocwriteln ">>"||_ansi("fmg")
   call zocsend "p"||homesec||"^M"
   kans=zocwaitmux("All Systems Ready, shall we engage?", "You cannot")
   select
    when kans=0 then do
     call zocsend "y"
     if zocwait("Citadel command (?=help)")=640 then call _error "timeout"
     call _commsg "r", "pwarp photon launched from "||asec||" to "||ksector||"."
     if zocwait("Citadel command (?=help)")=640 then call _error "timeout"
    end /*when*/
    when kans=1 then call zocwrite _ansi("bt;frd")||"<< cannot blind warp home!! >> "||_ansi("fmg")
    when kans=640 then call _error "timeout"
    otherwise nop
   end /*select*/
  end /*if*/
  else do
   select
    when _dword(lasttarget,2,";")>0 then call _commsg "r", kplayer||" got away last time - script will sleep for "||maxsleep-_dword(lasttarget,2,";")||" hits by "||kplayer||"."
    when \(kplayer="" | \_listinstr(targetlist.2, kplayer)) then call _commsg "r", "pwarp photon failed at "||ksector||":", kplayer||" is on the ignore list."
    when \(targetlist.1="" | _listinstr(targetlist.1, kplayer)) then call _commsg "r", "pwarp photon failed at "||ksector||":", kplayer||" is not on the target list."
    otherwise call _commsg "r", "pwarp photon failed at "||ksector||":", "no adjacent figs."
   end /*select*/
  end /*else*/
 end /*if*/
return kmoved

