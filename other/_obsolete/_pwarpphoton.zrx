     when usercommand="ignore"  then call _userignore  "R", "script owner", userargs
     when usercommand="clear"   then call _userclear   "R", "script owner"
     when usercommand="reset"   then call _userreset   "R", "script owner"
     when usercommand="limpet"  then call _userlimpet  "R", "script owner", userargs
     when usercommand="help"    then call _userhelp    "R", "script owner"
     when usercommand="##cancel##" then userdone=1
     otherwise userline="invalid command - ESC to quit"
    end /*select*/
   end /*do*/
  end /*when*/

  when ans=6 then do
   parse value _lastline() with ch player "DO" .
   if zocwait("^M")=640 then call _error "timeout"
   parse value _lastline() with usercommand userargs
   player=strip(player)
   usercommand=strip(lower(usercommand))
   select
    when usercommand="refresh" then call _userrefresh ch, player
    when usercommand="status"  then call _userstatus  ch, player
    when usercommand="target"  then call _usertarget  ch, player, userargs
    when usercommand="ignore"  then call _userignore  ch, player, userargs
    when usercommand="clear"   then call _userclear   ch, player
    when usercommand="reset"   then call _userreset   ch, player
    when usercommand="limpet"  then call _userlimpet  ch, player, userargs
    when usercommand="pause"   then call _userpause   ch, player
    when usercommand="help"    then call _userhelp    ch, player
    when usercommand="rescue"  then call _userrescue  ch, player, userargs
    otherwise call _commsg "r", "invalid user command"
   end /*select*/
  end /*when*/

  when ans=7 then call _waitcommand "Citadel command (?=help)"
  when ans=8 then call _waitcommand "Citadel command (?=help)"
  when ans=9 then call _waitcommand "Citadel command (?=help)"
  when ans=10 then do
   call _onlineget
   if _onlinereport() then call _beep "alert.wav"
  end /*when*/
  when ans=11 then do
   call _onlineget "manual"
   if _onlinereport() then call _beep "alert.wav"
  end /*when*/
  when ans=12 then call _commsg "r", "_pwarpphoton2 running..."
  when ans=640 then do
   call _onlineget
   if _onlinereport() then call _beep "alert.wav"
  end /*when*/
  otherwise call zocnotify "debug: otherwise in main loop"

 end /*select*/
end /*do*/

if ans=2 then call _quit

/* RUN KEEPALIVE LOOP */
done=0
msg="<< out of photons - leave citadel to end script. >>"
call zocwrite _ansi("bt;fgr")||msg||_ansi("fmg")
do while \done
 if zocwaitmux("Planet command", "<Quit>")=640 then do
  call zocsend "#"
  ans=zocwaitmux("Citadel command (?=help)", "Command [")
  select
   when ans=0 then nop
   when ans=1 then msg="<< out of photons - quit game to end script. >>"
   when ans=640 then call _error "timeout"
   otherwise nop
  end /*select*/
  call zocwrite _ansi("bt;fgr")||msg||_ansi("fmg")
 end /*if*/
 else done=1
end /*do*/

if ans=1 then call zocsend "n"

call _quit

exit

_userrefresh:
