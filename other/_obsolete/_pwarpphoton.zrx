  end /*when*/

  when ans=4 then call zocwrite _ansi("bt;frd")||"< pw-photon "||ptc||" photon(s) loaded. > "||_ansi("fmg")

  when ans=5 then do
   if zocwait("Citadel command")=640 then call _error "timeout"
   userline=""
